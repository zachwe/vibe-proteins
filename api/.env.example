# BetterAuth secret - generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-here

# Base URL for the API
BETTER_AUTH_URL=http://localhost:3000

# Frontend URL (for Stripe redirects)
FRONTEND_URL=http://localhost:5173

# Cloudflare R2 Storage (optional for dev, required for inference)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=vibeproteins
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Stripe (for balance deposits)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# OpenAI (for LLM-powered suggestions)
OPENAI_API_KEY=sk-...

# PostHog Analytics (optional)
POSTHOG_API_KEY=phc_...
POSTHOG_HOST=https://us.i.posthog.com

# Resend Email (for signup alerts)
RESEND_API_KEY=re_...
ALERT_EMAIL=your-email@example.com

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/...
